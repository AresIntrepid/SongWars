{{!-- Main container for the home page --}}
<div class="container">
    {{!-- Hero section with welcome message --}}
    <div class="hero">
        <h1>Welcome to SongWars</h1>
        <p>Battle your music against other artists in this competitive music platform!</p>
    </div>

    {{!-- Feature highlights section --}}
    <div class="features">
        <div class="feature-card">
            <h2>Ranked Battles</h2>
            <p>Compete in ranked matches and climb the leaderboard</p>
        </div>
        <div class="feature-card">
            <h2>Genre Matching</h2>
            <p>Get matched with songs from the same genre for fair battles</p>
        </div>
        <div class="feature-card">
            <h2>ELO System</h2>
            <p>Fair matchmaking based on your skill level</p>
        </div>
    </div>

    {{!-- Call to action buttons --}}
    <div class="cta-buttons">
        {{#if user}}
            {{!-- Logged in user actions --}}
            <a href="/ranked" class="btn btn-primary">Start Ranked Battle</a>
            <a href="/profile" class="btn btn-secondary">View Profile</a>
        {{else}}
            {{!-- Guest user actions --}}
            <a href="/auth/register" class="btn btn-primary">Sign Up</a>
            <a href="/auth/login" class="btn btn-secondary">Login</a>
        {{/if}}
    </div>

    {{!-- Top players section --}}
    <div class="top-players">
        <h2>Top Players</h2>
        <div class="player-list">
            {{#each topUsers}}
                <div class="player-card">
                    <img src="{{this.profilePicture}}" alt="{{this.username}}'s profile" class="player-avatar">
                    <div class="player-info">
                        <h3>{{this.username}}</h3>
                        <p>ELO: {{this.elo}}</p>
                        <p>Wins: {{this.wins}} | Losses: {{this.losses}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

{{!-- Styles for the home page --}}
<style>
