    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Hero section styles */
    .hero {
        text-align: center;
        padding: 4rem 0;
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
