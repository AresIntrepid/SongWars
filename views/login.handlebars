{{#section 'head'}}
<style>
    /* Main container styles */
    .container {
        max-width: 400px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    /* Auth form styles */
    .auth-form {
        background: #2a2a2a;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .auth-form h1 {
        color: #fff;
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Form group styles */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid #444;
        border-radius: 4px;
        background: #1a1a1a;
        color: #fff;
        font-size: 1rem;
    }

    .form-control:focus {
        outline: none;
        border-color: #007bff;
    }

    /* Button styles */
    .btn {
        width: 100%;
        padding: 0.8rem;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #007bff;
        color: #fff;
    }

    .btn-primary:hover {
        background: #0056b3;
        transform: translateY(-2px);
    }

    /* Alert styles */
    .alert {
        padding: 1rem;
        border-radius: 4px;
        margin-bottom: 1rem;
    }

    .alert-danger {
        background: #dc3545;
        color: #fff;
        border: 1px solid #c82333;
    }

    /* Auth links styles */
    .auth-links {
        margin-top: 1.5rem;
        text-align: center;
    }

    .auth-links p {
        color: #ccc;
        margin: 0.5rem 0;
    }

    .auth-links a {
        color: #007bff;
        text-decoration: none;
    }

    .auth-links a:hover {
        text-decoration: underline;
    }
</style>
{{/section}}

<a href="/" class="home-button">
    <i class="fas fa-home"></i> Home
</a>

{{!-- Main container for the login page --}}
<div class="container">
    {{!-- Login form section --}}
    <div class="auth-form">
        <h1>Login</h1>
        
        {{!-- Display any error messages --}}
        {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        {{!-- Login form --}}
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required class="form-control">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>

        {{!-- Links to other auth pages --}}
        <div class="auth-links">
            <p>Don't have an account? <a href="/auth/register">Register</a></p>
            <p><a href="/">Back to Home</a></p>
        </div>
    </div>
</div>

{{#section 'scripts'}}
<script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
{{/section}} 