{{!-- Main navigation header --}}
<header class="header">
    {{!-- Logo and brand name --}}
    <div class="brand">
        <a href="/" class="logo">
            <img src="/images/logo.png" alt="SongWars Logo" style="width: 10%; height:auto;">
            <h1 class="site-title">SongWars</h1>
        </a>
    </div>

    {{!-- Navigation menu --}}
    <nav class="nav-menu">
        {{!-- Home link --}}
        <a href="/" class="nav-link {{#if (eq currentPage 'home')}}active{{/if}}">
            <i class="fas fa-home"></i>
            Home
        </a>

        {{!-- Conditional navigation based on authentication --}}
        {{#if user}}
            {{!-- Profile link for logged-in users --}}
            <a href="/profile" class="nav-link {{#if (eq currentPage 'profile')}}active{{/if}}">
                <i class="fas fa-user"></i>
                Profile
            </a>

            {{!-- Logout button --}}
            <a href="/auth/logout" class="nav-link">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        {{else}}
            {{!-- Login link for guests --}}
            <a href="/auth/login" class="nav-link {{#if (eq currentPage 'login')}}active{{/if}}">
                <i class="fas fa-sign-in-alt"></i>
                Login
            </a>

            {{!-- Register link for guests --}}
            <a href="/auth/register" class="nav-link {{#if (eq currentPage 'register')}}active{{/if}}">
                <i class="fas fa-user-plus"></i>
                Register
            </a>
        {{/if}}
    </nav>

    {{!-- User info section (only shown when logged in) --}}
    {{#if user}}
        <div class="user-info">
            {{!-- Profile picture --}}
            <a href="/profile" class="profile-picture-header">
                <img src="{{user.profilePicture}}" alt="{{user.username}}'s profile">
            </a>

            {{!-- Username and ELO --}}
            <a href="/profile" class="user-details">
                <span class="username">{{user.username}}</span>
                <span class="elo">ELO: {{user.elo}}</span>
            </a>
        </div>
    {{/if}}
</header>

{{!-- Styles for the header --}}
<style>
    /* Header container styles */
    .header {
        background: #252525;
        padding: 0rem 2rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    /* Brand styles */
    .brand {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-right: auto;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
    }

    .logo-title {
        color: #00a2ff;
        font-size: 2.5rem;
    }

    .site-title {
        color: #fff;
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    /* Navigation menu styles */
    .nav-menu {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        margin-right: 2rem;
    }

    .nav-link {
        color: #ccc;
        text-decoration: none;
        display: flex;
        align-items: right;
        padding: 0.5rem;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: #fff;
        background: rgba(255,255,255,0.1);
    }

    .nav-link.active {
        color: #007bff;
        background: rgba(0,123,255,0.1);
    }

    /* User info styles */
    .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .profile-picture-header {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        overflow: hidden;
        cursor: pointer;
        transition: opacity 0.2s ease;
    }

    .profile-picture-header:hover {
        opacity: 0.8;
    }

    .profile-picture-header img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .user-details {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        cursor: pointer;
        transition: opacity 0.2s ease;
    }

    .user-details:hover {
        opacity: 0.8;
    }

    .username {
        color: #fff;
        font-weight: bold;
    }

    .elo {
        color: #ffa200;
        font-size: 0.9rem;
        font-weight: bold;
    }
</style> 